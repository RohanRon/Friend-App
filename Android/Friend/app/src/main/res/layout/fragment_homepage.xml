<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.friend.HomePageFragment">
    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:id="@+id/linearLayout">

    <Button
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:text="Emergency calls"
        android:layout_weight=".2"
        android:id="@+id/sosNavigatorButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:shadowDx="10"
        android:background="#ffffff"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:text="Support"
        android:background="#ffffff"
        android:layout_weight=".2"
        android:id="@+id/supportButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:shadowDx="10"
        />
</LinearLayout>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/profileImageView"
        android:background="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView9"
        android:layout_above="@+id/sosNavigatorButton"
        android:layout_marginBottom="31dp"
        android:layout_alignRight="@+id/profileImageView"
        android:layout_alignEnd="@+id/profileImageView"
        android:layout_alignLeft="@+id/profileImageView"
        android:layout_alignStart="@+id/profileImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ayush Pant"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/textView10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/textView11"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
