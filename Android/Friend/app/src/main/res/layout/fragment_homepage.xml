<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.friend.HomePageFragment">
    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:text="Emergency calls"
        android:id="@+id/sosNavigatorButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:text="Support"
        android:id="@+id/supportButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/profileImageView"
        android:background="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView9"
        android:layout_above="@+id/sosNavigatorButton"
        android:layout_marginBottom="31dp"
        android:layout_alignRight="@+id/profileImageView"
        android:layout_alignEnd="@+id/profileImageView"
        android:layout_alignLeft="@+id/profileImageView"
        android:layout_alignStart="@+id/profileImageView" />


</RelativeLayout>
