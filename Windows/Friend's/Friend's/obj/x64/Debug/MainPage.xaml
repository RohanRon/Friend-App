<Page
    x:Class="Friend_s.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Friend_s"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
    RequestedTheme="Light">

    
    <Grid x:ConnectionId='1' Name="LayoutGrid">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        
        <RelativePanel Background="#2c3e50">
            <Button x:ConnectionId='10' Background="DarkRed" RequestedTheme="Dark" Name="HamburgerButton" MinWidth="46" MinHeight="50" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" FontSize="20"                                />
            <Button x:ConnectionId='11' RequestedTheme="Dark" HorizontalAlignment="Center" Background="{x:Null}" Name="BackButton" RelativePanel.RightOf="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE0A6;" FontSize="20"                            Height="50" Margin="0,0,0,-10"/>
            <TextBlock RequestedTheme="Dark" RelativePanel.AlignRightWithPanel="True" FontSize="20" Margin="10,10,0,0" Text="Friend's" FontFamily="Againts" MinWidth="70" ></TextBlock>
        </RelativePanel>
        
        <SplitView x:ConnectionId='2' RequestedTheme="Dark" CompactPaneLength="46" OpenPaneLength="200" Grid.Row="1" Name="MainSplitView" DisplayMode="CompactOverlay">
            <SplitView.Pane>
                <RelativePanel AlignBottomWithPanel="True">
            <ListBox x:ConnectionId='3' RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignTopWithPanel="True" SelectionMode="Single" Name="SplitListBox"                                                   >
                <ListBoxItem x:ConnectionId='4' Name="HomeListItem">
                    <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE10F;" FontSize="20"/>
                        <TextBlock Text="Home" FontSize="18" Margin="25,0,0,0"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem x:ConnectionId='5' Name="SosListItem">
                    <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE171;" FontSize="20"/>
                            <TextBlock Text="SOS" FontSize="18" Margin="25,0,0,0"/>
                        </StackPanel>
                </ListBoxItem>
                
                    <Border MinWidth="200" Margin="-10,0,0,0" Background="Aqua" MinHeight="0.2" />
                    <ListBoxItem x:ConnectionId='6' Name="ProfileListItem">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:ConnectionId='8' Name="EllipseButtonHome" RelativePanel.Below="Hitext" RelativePanel.AlignHorizontalCenterWithPanel="True" Height="20" Width="20">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="Assets/Generic-Profile-Image.jpg"></ImageBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Text="//Todo" FontSize="18" Margin="25,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='7' RelativePanel.AlignBottomWithPanel="True" Name="SettingsListItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="20"/>
                            <TextBlock Text="Settings" FontSize="18" Margin="25,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
                </RelativePanel>
            </SplitView.Pane>
            
            <SplitView.Content>
                <Frame x:ConnectionId='9' Name="MainFrame"/>
            </SplitView.Content>
        </SplitView>
        
    </Grid>

</Page>

