<Page
    x:Class="Friend_s.Voice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Friend_s"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>

        <SplitView x:ConnectionId='1' Grid.RowSpan="2"  x:Name="MySplitView" DisplayMode="CompactOverlay"  IsPaneOpen="False" 

               CompactPaneLength="50" OpenPaneLength="150">

            <SplitView.Pane  >

                <StackPanel Background="#2c3e50" >
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='5' x:Name="HamburgerButton" Foreground="White" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"

                    Width="50" Height="50" Background="Transparent"                              />
                        <TextBlock Text="Friend's" Foreground="White" FontSize="18" VerticalAlignment="Center" FontFamily="Palatino Linotype" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">

                        <Button x:ConnectionId='4' x:Name="MenuButton1" FontFamily="Segoe MDL2 Assets" Foreground="White" Content="&#xE7F2;"

                    Width="50" Height="50" Background="Transparent"/>

                        <TextBlock Text="Call" Foreground="White" FontSize="18" VerticalAlignment="Center" />

                    </StackPanel>

                    <StackPanel Orientation="Horizontal">

                        <Button x:ConnectionId='3' x:Name="MenuButton2" FontFamily="Segoe MDL2 Assets" Foreground="White" Content="&#xE8F2;"

                        Width="50" Height="50" Background="Transparent"/>

                        <TextBlock Text="Sms" Foreground="White" FontSize="18" VerticalAlignment="Center" />

                    </StackPanel>

                    <StackPanel Orientation="Horizontal">

                        <Button x:ConnectionId='2' x:Name="MenuButton3" Foreground="White" FontFamily="Segoe MDL2 Assets" Content="&#xE1D6;"

                        Width="50" Height="50" Background="Transparent"                            />

                        <TextBlock Text="Voice" Foreground="White" FontSize="18" VerticalAlignment="Center" />

                    </StackPanel>

                </StackPanel>

            </SplitView.Pane>

            <SplitView.Content>

                <Grid>


                </Grid>

            </SplitView.Content>

        </SplitView>
    </Grid>
</Page>

